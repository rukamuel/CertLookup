<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         stopOnFailure="false"
         verbose="true">
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">./tests/</directory>
        </include>
    </coverage>
    <testsuites>
        <testsuite name="App Test Suite">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>
</phpunit>